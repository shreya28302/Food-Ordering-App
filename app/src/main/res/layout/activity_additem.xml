<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_image"
        android:scaleType="centerCrop"
        android:id="@+id/imageview"
        android:alpha="0.5"

        />



    <EditText

        android:hint="Name of Food"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/foodname"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_round"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_restaurant_menu_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:textColorHint="#fff"
        android:alpha="0.8"
        />
    <EditText

        android:hint="Price in Rs."
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/price"
        android:layout_below="@+id/foodname"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_round"
        android:alpha="0.8"

        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/rupee_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:textColorHint="#fff"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Choose Image"
        android:id="@+id/chooseimage"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mainfont"
        android:textSize="25sp"
        android:alpha="0.8"

        />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="ADD Item"
        android:id="@+id/additem"
        android:layout_below="@+id/chooseimage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mainfont"
        android:textSize="25sp"
        android:alpha="0.8"

        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/price"
        android:contextClickable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"

        />
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/additem"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>